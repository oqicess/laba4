function zad8() { 
let a=1, b=-8, c=12; 
var d=b*b-4*a*c; 
var x1,x2; 
x1=(-b+Math.sqrt(d))/(2*a); 
x2=(-b-Math.sqrt(d))/(2*a); 
alert("x1 = " + x1 + ", " + "x2 = " + x2); 
} 

