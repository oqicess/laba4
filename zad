} 

} 
function zad10(){ 
var arr=[]; 
	for(var i=0; i<5; i++){ 
		arr[i]=Math.random()*(5-1)+1 
	} 
b=0; 
	for(var i=0; i<5; i++){ 
		b+=arr[i]*arr[i]; 
	alert(b); 
} 
} 

